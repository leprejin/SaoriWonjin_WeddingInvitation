<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Wedding Invitation — Wonjin & Saori</title>
  <meta name="description" content="You're invited to our wedding. Save the date and RSVP!"/>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    :root{
      --bg: #f7f7f7;
      --card: #ffffff;
      --ink: #111111;
      --muted: #6b7280;
      --accent: #4f46e5;
      --accent-2: #a78bfa;
      --ring: #e9d5ff;
      --radius: 20px;
    }
    *{box-sizing:border-box}
    html,body{height:100%}
    body{
      margin:0; background: radial-gradient(1000px 600px at 10% -10%, #f3e8ff 0, transparent 60%),
      radial-gradient(800px 500px at 100% 0%, #e0e7ff 0, transparent 50%), var(--bg);
      color:var(--ink); font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji","Segoe UI Emoji";
      line-height:1.6; display:flex; align-items:center; justify-content:center; padding:24px;
    }
    .shell{max-width:1100px; width:100%;}
    .lang-switch{
      position:fixed; top:16px; left:16px; display:flex; gap:8px; z-index:50;
    }
    .lang-switch button{
      border:1px solid #e5e7eb; background:rgba(255,255,255,.9); backdrop-filter:saturate(180%) blur(8px);
      color:var(--ink); padding:6px 10px; border-radius:999px; cursor:pointer; font-size:12px; font-weight:600;
      transition:.2s transform ease, .2s background ease, .2s border-color ease;
    }
    .lang-switch button:hover{transform:translateY(-1px)}
    .lang-switch button.active{border-color:var(--accent); box-shadow:0 0 0 3px var(--ring)}

    .card{
      background:linear-gradient(180deg, rgba(255,255,255,.85), rgba(255,255,255,.95));
      border:1px solid #e5e7eb; border-radius:var(--radius); overflow:hidden; box-shadow:0 10px 30px rgba(0,0,0,.06);
    }
    .grid{display:grid; grid-template-columns:1.1fr .9fr}
    @media (max-width: 920px){ .grid{grid-template-columns:1fr} }

    .hero{
      position:relative; min-height:420px; background:
        linear-gradient(180deg, rgba(0,0,0,.25), rgba(0,0,0,.15)),
        url('https://images.unsplash.com/photo-1522673607200-164d1b6ce486?q=80&w=1974&auto=format&fit=crop');
      background-size:cover; background-position:center; color:#fff;
      display:flex; align-items:end; padding:28px; gap:16px;
    }
    .hero .badge{font-size:12px; letter-spacing:.08em; text-transform:uppercase; opacity:.9}
    .hero .names{font-family: 'Playfair Display', serif; font-weight:600; font-size:40px; line-height:1.1}

    .content{padding:36px}
    h2{font-family:'Playfair Display', serif; font-weight:600; font-size:28px; margin:0 0 8px}
    p{margin:0 0 16px; color:#374151}
    .muted{color:var(--muted)}
    .row{display:grid; grid-template-columns:1fr 1fr; gap:16px}
    @media (max-width:600px){ .row{grid-template-columns:1fr} }

    .info{
      display:grid; gap:12px; margin:16px 0 24px
    }
    .pill{display:inline-flex; align-items:center; gap:8px; font-size:13px; padding:8px 12px; border:1px solid #e5e7eb; border-radius:999px}
    .dot{width:8px; height:8px; border-radius:999px; background:var(--accent)}

    .cta{
      display:flex; gap:12px; flex-wrap:wrap
    }
    .btn{
      appearance:none; border:none; border-radius:14px; padding:12px 16px; font-weight:600; cursor:pointer;
      background:var(--accent); color:#fff; transition:.2s transform ease, .25s box-shadow ease;
      box-shadow:0 10px 22px -10px rgba(79,70,229,.7);
    }
    .btn:hover{transform:translateY(-1px)}
    .btn.secondary{background:#fff; color:#111; border:1px solid #e5e7eb; box-shadow:none}

    .divider{height:1px; background:linear-gradient(90deg, transparent, #e5e7eb, transparent); margin:24px 0}

    .footer{padding:14px 22px; display:flex; justify-content:space-between; align-items:center; font-size:12px; color:var(--muted); background:#fafafa; border-top:1px solid #eee}
    .heart{color:#ef4444}
  </style>
</head>
<body>
  <!-- Language Switcher -->
  <nav class="lang-switch" aria-label="Language Switcher">
    <button data-lang="en" class="active" aria-pressed="true">English</button>
    <button data-lang="ko">한글</button>
    <button data-lang="ja">日本語</button>
  </nav>

  <main class="shell">
    <section class="card grid" role="region" aria-labelledby="heading">
      <div class="hero">
        <div>
          <div class="badge" data-i18n="tagline">We’re tying the knot</div>
          <div class="names" data-i18n="names">Wonjin & Saori</div>
        </div>
      </div>
      <div class="content">
        <h2 id="heading" data-i18n="headline">You’re invited to our wedding</h2>
        <p class="muted" data-i18n="intro">
          We’re so happy to share this day with you. Please find the details below.
        </p>

        <div class="info">
          <div class="pill"><span class="dot"></span><span data-i18n="date">Sunday, 21 December 2025 · 10:20 AM</span></div>
          <div class="pill"><span class="dot"></span><span data-i18n="venue">The Grand Prince Hotel Takanawa, 3 Chome-13-1 Takanawa, Minato City, Tokyo 108-8612</span></div>
        </div>

        <div class="row">
          <div>
            <h3 data-i18n="map_title" style="margin:0 0 6px; font-size:18px; font-weight:700">Getting there</h3>
            <p data-i18n="map_copy">Parking available on-site. 10 min walk from Shinagawa Station (Line Yamanote).</p>
          </div>
        </div>

        <div class="divider" role="separator" aria-hidden="true"></div>

        <div class="cta">
          <a class="btn" id="rsvpBtn" href="#" data-i18n-attr="textContent:rsvp_btn,href:rsvp_link">RSVP</a>
          <a class="btn secondary" target="_blank" rel="noopener" id="mapBtn" data-i18n-attr="textContent:view_map_btn,href:map_link">Open Map</a>
        </div>
      </div>
      <div class="footer">
        <span data-i18n="footer_note">With love, Wonjin & Saori</span>
        <span>© 2025</span>
      </div>
    </section>
  </main>

  <script>
    // i18n 사전
    const I18N = {
      en: {
        tagline: "We’re tying the knot",
        headline: "Wonjin Lee & Saori Funayama",
        intro: "We’re so happy to share this day with you. Please find the details below and RSVP.",
        date: "Sunday, 21 December 2025 · 10:20 AM",
        venue: "The Grand Prince Hotel Takanawa, Shinagawa Tokyo",
        map_title: "Getting there",
        map_copy: "Parking available on-site. 10 min walk from Shinagawa Station (Line Yamanote).",
        rsvp_btn: "Message to the bride and groom",
        view_map_btn: "Open Map",
        names: "Wonjin Lee & Saori Funayama",
        footer_note: "With love, Wonjin & Saori",
        rsvp_link: "mailto:leewonjinjin@naver.com?subject=Congratuation",
        map_link: "https://maps.app.goo.gl/Q5wpRw3mD8xcexqh9"
      },
      ko: {
        tagline: "저희, 결혼합니다",
        headline: "이원진 & 후나야마 사오리",
        intro: "소중한 순간을 함께하고자 합니다. 아래에서 상세 정보를 확인하시고 참석 여부를 알려주세요.",
        date: "2025년 12월 21일 (일) · 오전 10시 20분",
        venue: "그랜드 프린스 호텔 타카나와 귀빈관",
        map_title: "오시는 길",
        map_copy: "시나가와 역 서쪽 출구에서 10분 거리.",
        rsvp_btn: "신랑/신부 메시지",
        view_map_btn: "지도 열기",
        names: "이원진 & 후나야마 사오리",                
        footer_note: "사랑을 담아, 원진 & 사오리",
        rsvp_link: "mailto:leewonjinjin@naver.com?subject=결혼%20축하합니다",
        map_link: "https://maps.app.goo.gl/Q5wpRw3mD8xcexqh9"
      },
      ja: {
        tagline: "私たちは結婚します",
        headline: "イ·ウォンジン & ふナヤマ·サオリ",
        intro: "この特別な日を皆さまと分かち合えることを嬉しく思います。詳細をご確認のうえ、ご返信ください。",
        date: "2025年12月21日（日）· 午前10:20",
        venue: "グランドプリンスホテル高輪 貴賓館ウエディング",
        map_title: "アクセス",
        map_copy: "品川駅西口から10分の距離。",
        rsvp_btn: "新郎新婦に返信",
        view_map_btn: "地図を開く",
        names: "李元進 & 舟山沙織",        
        footer_note: "愛をこめて、元進 & 沙織",
        rsvp_link: "mailto:leewonjinjin@naver.com?subject=結婚おめでとう",
        map_link: "https://maps.app.goo.gl/Q5wpRw3mD8xcexqh9"
      }
    };
 const $ = (s, root=document) => root.querySelector(s);
  const $$ = (s, root=document) => Array.from(root.querySelectorAll(s));

  function applyLang(lang){
    const dict = I18N[lang] || I18N.en;
    document.documentElement.setAttribute('lang', lang);

    $$('[data-i18n]').forEach(el => {
      const key = el.getAttribute('data-i18n');
      if (dict[key]) el.textContent = dict[key];
    });

    $$('[data-i18n-attr]').forEach(el => {
      const pairs = el.getAttribute('data-i18n-attr').split(',');
      pairs.forEach(pair => {
        const [prop, key] = pair.split(':');
        if (prop && key && dict[key]){
          if (prop === 'textContent') el.textContent = dict[key];
          else el.setAttribute(prop, dict[key]);
        }
      })
    });

    $$('.lang-switch button').forEach(btn => {
      const isActive = btn.dataset.lang === lang;
      btn.classList.toggle('active', isActive);
      btn.setAttribute('aria-pressed', String(isActive));
    });

    try{ localStorage.setItem('invite.lang', lang); }catch(e){}
  }

  // OS 감지
  function detectOS() {
    const ua = navigator.userAgent.toLowerCase();
    if (/windows/.test(ua)) return 'windows';
    if (/mac/.test(ua) && !/iphone|ipad|ipod/.test(ua)) return 'mac';
    if (/iphone|ipad|ipod/.test(ua)) return 'ios';
    if (/android/.test(ua)) return 'android';
    if (/cros/.test(ua)) return 'chromeos';
    if (/linux/.test(ua)) return 'linux';
    return 'unknown';
  }

  // OS & 언어 기반 초기 언어 선택
  function detectLangByOS() {
    const os = detectOS();
    const lang = (navigator.language || 'en').toLowerCase();

    // 1) 한국어 OS/브라우저 → ko
    if (lang.startsWith('ko')) return 'ko';

    // 2) 일본어 OS/브라우저 → ja
    if (lang.startsWith('ja')) return 'ja';

    // 3) OS가 iOS/Android → 일본어 우선
    if (os === 'ios' || os === 'android') return 'ja';

    // 4) 그 외 (Windows, Mac 등) → 영어
    return 'en';
  }

  // Init
  const saved = (()=>{try{return localStorage.getItem('invite.lang')}catch(e){return null}})();
  if (saved) {
    applyLang(saved);
  } else {
    const lang = detectLangByOS();
    applyLang(lang);
  }

  // Events
  $$('.lang-switch button').forEach(btn => 
    btn.addEventListener('click', () => applyLang(btn.dataset.lang))
  );

  // Smooth scroll for hash links
  document.addEventListener('click', (e)=>{
    const a = e.target.closest('a[href^="#"]');
    if(!a) return; e.preventDefault();
    const el = $(a.getAttribute('href'));
    if(el) el.scrollIntoView({behavior:'smooth', block:'start'});
  });
</script>
</body>
</html>